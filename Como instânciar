// 1. Definindo a classe Mamifero
public class Mamifero {
    // Atributos (características do mamífero)
    String nome;
    int idade;
    String cor;

    // 2. Criando um construtor para inicializar os objetos
    public Mamifero(String nome, int idade, String cor) {
        this.nome = nome;
        this.idade = idade;
        this.cor = cor;
    }

    // 3. Método para mostrar informações do mamífero
    public void mostrarInfo() {
        System.out.println("Nome: " + nome);
        System.out.println("Idade: " + idade + " anos");
        System.out.println("Cor: " + cor);
    }
}

// 4. Classe principal para testar a criação de objetos Mamifero
public class Main {
    public static void main(String[] args) {
        // 5. Instanciando um objeto Mamifero usando o construtor
        Mamifero m1 = new Mamifero("Leão", 5, "Dourado");

        // 6. Chamando método para mostrar informações do objeto
        m1.mostrarInfo();

        // 7. Instanciando outro objeto
        Mamifero m2 = new Mamifero("Elefante", 10, "Cinza");

        m2.mostrarInfo();
    }
}
